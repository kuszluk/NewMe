<form name="fos_user_registration_form" method="post" action="/register/" class="fos_user_registration_register form-header" role="form" id="#">

    <div id="fos_user_registration_form">

        <div class="form-group">
            <input  class="form-control input-lg" type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" placeholder="Podaj email" required="required">
        </div>

        <div class="form-group">
            <input  class="form-control input-lg" type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" placeholder="{{ 'security.login.username'|trans }}" required="required" maxlength="180" pattern=".{2,}">
        </div>

        <div class="form-group">
            <input  class="form-control input-lg" type="password" id="fos_user_registration_form_plainPassword_first"
                    name="fos_user_registration_form[plainPassword][first]" placeholder="Hasło" required="required">
        </div>

        <div class="form-group">
            <input class="form-control input-lg" type="password" id="fos_user_registration_form_plainPassword_second"
                   name="fos_user_registration_form[plainPassword][second]" placeholder="Powtórz hasło" required="required">
        </div>

            <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]"  value="IS1kDudGebZbv_2NOT6GG6i_I13eIR64LC0jjhlqOoo">

         <div class="form-group last">
            <input class="btn btn-warning btn-block btn-lg" type="submit" value="{{ 'registration.submit'|trans }}">
        </div>

        <p class="privacy text-center">MASZ JUŻ KONTO? <a href="/">ZALOGUJ SIĘ</a> JUŻ DZIŚ!
        </p>

    </div>

</form>